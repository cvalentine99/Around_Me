# Valentine RF environment configuration
# Copy to /etc/valentine-rf.env and set strong values
# Permissions should be 600 (owner-only read/write)

# REQUIRED: Set a strong, persistent secret key for session signing.
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
VALENTINE_SECRET_KEY=CHANGE_ME_GENERATE_A_STRONG_KEY

# REQUIRED: Set a strong admin password (minimum 12 characters).
# If not set, a random password is generated and persisted in instance/.secrets.json
VALENTINE_ADMIN_PASSWORD=CHANGE_ME_USE_A_STRONG_PASSWORD

# Admin username (default: admin)
# VALENTINE_ADMIN_USERNAME=admin

# Server settings (bind to localhost when behind a reverse proxy)
VALENTINE_HOST=127.0.0.1
VALENTINE_PORT=5050

# Logging level: DEBUG, INFO, WARNING, ERROR
VALENTINE_LOG_LEVEL=WARNING

# PostgreSQL credentials for ADS-B history (optional)
# VALENTINE_ADSB_HISTORY_ENABLED=true
# VALENTINE_ADSB_DB_HOST=localhost
# VALENTINE_ADSB_DB_PORT=5432
# VALENTINE_ADSB_DB_NAME=valentine_adsb
# VALENTINE_ADSB_DB_USER=valentine_db
# VALENTINE_ADSB_DB_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD
